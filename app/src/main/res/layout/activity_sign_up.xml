<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.355"
        app:layout_constraintWidth_percent="0.78"
        app:cardCornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/image_login_logo"/>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/image_login"
        android:alpha="0.8"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_up_bt_kakao_social"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="카카오로 3초만에 시작하기"
        android:textStyle="bold"
        android:textSize="16sp"
        android:background="@drawable/login_bt_kakao_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="225dp"/>

    <TextView
        android:id="@+id/sign_up_tv_other_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다른 방법으로 가입하기"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/sign_up_bt_kakao_social"
        app:layout_constraintStart_toStartOf="@id/sign_up_bt_kakao_social"
        app:layout_constraintEnd_toEndOf="@id/sign_up_bt_kakao_social"
        android:layout_marginTop="25dp"/>

    <ImageView
        android:id="@+id/sign_up_iv_stroke"
        android:src="@drawable/login_str"
        android:layerType="software"
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        app:layout_constraintTop_toBottomOf="@id/sign_up_tv_other_method"
        android:layout_marginTop="25dp"
        android:background="#00000000"
        android:alpha="0.7"
        app:layout_constraintStart_toStartOf="@id/sign_up_bt_kakao_social"
        app:layout_constraintEnd_toEndOf="@id/sign_up_bt_kakao_social"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_up_bt_other_method"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="기존 회원 로그인"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/ripple_login_bt_other_method_shape"
        app:layout_constraintStart_toStartOf="@id/sign_up_bt_kakao_social"
        app:layout_constraintEnd_toEndOf="@id/sign_up_bt_kakao_social"
        app:layout_constraintTop_toBottomOf="@id/sign_up_iv_stroke"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입 없이 둘러보기"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/sign_up_bt_other_method"
        app:layout_constraintStart_toStartOf="@id/sign_up_bt_other_method"
        app:layout_constraintEnd_toEndOf="@id/sign_up_bt_other_method"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>